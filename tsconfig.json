{
    "compilerOptions": {
      "target": "ES6",                          // Alvo de compilação: ES6 (ou ES2015)
      "module": "CommonJS",                     // Sistema de módulos
      "declaration": true,                      // Gera arquivos .d.ts (tipos)
      "outDir": "./dist",                       // Diretório de saída dos arquivos compilados
      "strict": true,                           // Ativa verificações estritas
      "esModuleInterop": true,                  // Facilita interoperabilidade com CommonJS
      "forceConsistentCasingInFileNames": true, // Força consistência em nomes de arquivos
      "skipLibCheck": true                      // Ignora checagem de tipos em bibliotecas
    },
    "include": ["lib/**/*"],                    // Inclui todos os arquivos dentro de 'src/'
    "exclude": ["node_modules"]         // Exclui node_modules e arquivos de teste
}